<br />




<table class = "table table-bordered table-striped">
   <thead>
      <tr>
         <th>Name</th>
         <th>Download Link</th>
      </tr>
   </thead>
   
   <tbody>
      <% @resources.each do |resource| %>
         <tr>
            <td><%= resource.name %></td>
            <td><%= link_to "Download resource", resource.attachment_url %></td>
              
         </tr>
      <% end %>
   </tbody>
   
</table>