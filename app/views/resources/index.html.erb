
<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />
<h><b>Course Resources</b></h> 

</br>
</br>
<%= link_to "New Resource", new_subject_course_resource_path, class: "btn btn-primary" %>
